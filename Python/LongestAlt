
def longestAlternativeLength(arr) -> int:
    
    if(len(arr) == 1):
        return 1
    
    
    for i in range(len(arr)):
        
        arr[i] = arr[i] % 2

    left = 0
    right = 1
    maxl = 0

    nextOdd = True

    if(arr[0] == 0):
        nextOdd = True
    else:
        nextOdd = False

    while (right < len(arr)):
        
        if(nextOdd and arr[right] == 1):
            pass
        elif ((not nextOdd) and arr[right] == 0):
            pass
        else:
            maxl = max(maxl, right - left)
            left = right
            nextOdd = not nextOdd
            
        nextOdd = not nextOdd
        right += 1
        
    maxl = max(maxl, right - left)

    return maxl


arr1 = [1, 3, 5]
print(longestAlternativeLength(arr1))

arr2 = [2,1,4,3,7]
print(longestAlternativeLength(arr2))

arr3 = [2, 4, 6]
print(longestAlternativeLength(arr3))